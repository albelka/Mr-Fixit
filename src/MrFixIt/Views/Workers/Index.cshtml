@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mr Fix-It";
}

@if (User.Identity.IsAuthenticated)
{

    <div class="text-center">
        <h4>Hello Worker @Model.FirstName @Model.LastName. You are Logged In.</h4>
        <h3>Your Current Jobs:</h3>
        @foreach (var Job in Model.Jobs)
        {

            <script type="text/javascript">
        $(document).ready(function () {
            $('.mark-active').click(function () {
                $.ajax({
                    type: 'POST',
                    data: { 'id': @Job.JobId},
                    url: '@Url.Action("MarkActive")',
                    success: function (result) {
                        $('#activeView').html(result);
                    }
                });
            });

                $('.mark-completed').click(function () {
                    $.ajax({
                        type: 'POST',
                        data: { 'id': @Job.JobId},
                        url: '@Url.Action("MarkComplete")',
                        success: function (result) {
                            $('#completedView').html(result);
                        }
                    });
                });
        })
            </script>

            <h5>@Job.Title</h5>
            if(Job.Pending)
            {
                <div id="activeView"></div>;

            }
            else
            {
               
            <p class=" btn mark-active">Mark as Active</p>;

            }

            if (Job.Completed)
            {
                <div id="completedView"></div>;

            }
            else
            {

                <p class=" btn mark-completed">Mark Complete</p>;

            }

        }
        @if (Model.Avaliable)
        {
            <h4>@Html.ActionLink("View all Jobs", "Index", "Jobs")</h4>
        }
        else
        {
            <p>You are already assigned to a job.</p>
        }
    </div>
}