@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mr Fix-It";
}

@model MrFixIt.Models.Job

<h3>Are you sure you want to delete this job?</h3>
<hr />
@Html.DisplayFor(model => model.Title)
<form asp-action="Delete"asp-controller="Jobs" method="post">
    <input for="job" type="hidden" value="@Model.JobId" name="id" />
    <input type="submit" class="btn" value="Delete" />
</form>
